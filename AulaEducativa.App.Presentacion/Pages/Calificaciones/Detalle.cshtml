@page
@model AulaEducativa.App.Presentacion.Pages.Calificaciones.DetalleModel

@{ 
    Layout = "_PartialLayoutusuarios";
    ViewData["Title"] = "Calificar actividad";
}

<h3 style="margin-bottom: 15px;">@ViewData["Title"]</h3>

<div>
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Actividad.Id" />
            <input type="hidden" asp-for="Actividad.EstudianteId" />
            <input type="hidden" asp-for="Actividad.Estudiante.Id" />
            <input type="hidden" asp-for="Actividad.MateriaId" />
            <input type="hidden" asp-for="Actividad.Materia.Id" />
            <input type="hidden" asp-for="Actividad.Adjunto" />
            <div class ="form-group col-md-12 row">
                <div class="col-md-3">
                    <label class="control-label">Materia</label>
                    <input asp-for="Actividad.Materia.Nombre" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="control-label">Nombre actividad</label>
                    <input asp-for="Actividad.Nombre" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label asp-for="Actividad.FechaLimite" class="control-label"></label>
                    <input asp-for="Actividad.FechaLimite" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label asp-for="Actividad.Calificacion" class="control-label"></label>
                    <input asp-for="Actividad.Calificacion" class="form-control" />
                </div>
            </div>

            <div class="form-group col-md-12 row">
                <div class="col-md-12">
                    <label asp-for="Actividad.Descripcion" class="control-label"></label>
                    <textarea asp-for="Actividad.Descripcion" class="form-control" style="resize: none;"></textarea>
                </div>
            </div>

            <div class="form-group col-md-12 row" style="margin-bottom: 20px;">
                <div class="col-md-3">
                    <label asp-for="Actividad.FechaEntrega" class="control-label"></label>
                    <input asp-for="Actividad.FechaEntrega" class="form-control" />
                </div>


                @if (Model.Actividad.Adjunto != null) 
                {
                    <div class="col-md-8 d-flex flex-column">
                        <label class="control-label">Adjunto</label>
                        <a download href="@Url.Page("Detalle", "DescargarArchivo", new { id = Model.Actividad.Id })">Descargar adjunto actividad</a>
                    </div>
                }
                else
                {
                    <div class="col-md-8 d-flex flex-column">
                        <label class="control-label">Adjunto</label>
                        <p>No hay archivo adjunto</p>
                    </div>
                }
            </div>

            <input type="submit" value="Actualizar" class="btn btn-primary" />
            <button class="btn btn-secondary">
                <a asp-page="Index" style="color: white; text-decoration: none; width: 100%; height: 100%;">Regresar</a>
            </button>
        </form>
    </div>
</div>