@page
@model AulaEducativa.App.Presentacion.Pages.Actividades.EditarModel

@{
    ViewData["Title"] = "Instituciones";
}

<h3 style="margin-bottom: 15px;">@ViewData["Title"]</h3>

<div>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom: 20px;">
                <label asp-for="Institucion.Nombre" class="control-label"></label>
                <input asp-for="Institucion.Nombre" class="form-control" />
                <span asp-validation-for="Institucion.Nombre" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Institucion.Id" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <button class="btn btn-secondary">
                    <a asp-page="Index" style="color: white; text-decoration: none; width: 100%; height: 100%;">Regresar</a>
                </button>
            </div>
        </form>
    </div>
</div>