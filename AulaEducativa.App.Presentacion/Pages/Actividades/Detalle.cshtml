@page
@model AulaEducativa.App.Presentacion.Pages.Actividades.DetalleModel

@{ 
    Layout = "_PartialLayoutusuarios";
    ViewData["Title"] = "Detalle actividad";
}

<h3 style="margin-bottom: 15px;">@ViewData["Title"]</h3>

<div>
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.Actividad.Id" />
            <div class ="form-group col-md-12 row">
                <div class="col-md-3">
                    <label class="control-label">Materia</label>
                    <input disabled asp-for="@Model.Actividad.Materia.Nombre" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="control-label">Nombre actividad</label>
                    <input disabled asp-for="@Model.Actividad.Nombre" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label asp-for="@Model.Actividad.FechaLimite" class="control-label"></label>
                    <input disabled asp-for="@Model.Actividad.FechaLimite" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label asp-for="@Model.Actividad.Calificacion" class="control-label"></label>
                    <input disabled asp-for="@Model.Actividad.Calificacion" class="form-control" />
                </div>
            </div>

            <div class="form-group col-md-12 row">
                <div class="col-md-12">
                    <label asp-for="@Model.Actividad.Descripcion" class="control-label"></label>
                    <textarea disabled asp-for="@Model.Actividad.Descripcion" class="form-control" style="resize: none;"></textarea>
                </div>
            </div>

            <div class="form-group col-md-12 row" style="margin-bottom: 20px;">
                <div class="col-md-3">
                    <label asp-for="@Model.Actividad.FechaEntrega" class="control-label"></label>
                    <input disabled asp-for="@Model.Actividad.FechaEntrega" class="form-control" />
                </div>


                @if (Model.Actividad.Adjunto == null) 
                { 
                    <div class="col-md-8">
                        <label class="control-label">Adjunto</label>
                        <input asp-for="Adjunto.AdjuntoActividad" type="file" accept=".pdf" class="form-control" />
                    </div>
                }
                else
                {
                    <div class="col-md-8 d-flex flex-column">
                        <label class="control-label">Adjunto</label>
                        <a download href="@Url.Page("Detalle", "DescargarArchivo", new { id = Model.Actividad.Id })">Descargar adjunto actividad</a>
                    </div>
                }
            </div>

            @if (Model.Actividad.Adjunto == null)
            { 
                <input type="submit" asp-route-id="@Model.Actividad.Id" value="Actualizar" class="btn btn-primary" />
            }

            <button class="btn btn-secondary">
                <a asp-page="Index" style="color: white; text-decoration: none; width: 100%; height: 100%;">Regresar</a>
            </button>
        </form>
    </div>
</div>