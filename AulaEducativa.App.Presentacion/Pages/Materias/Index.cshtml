@page
@model AulaEducativa.App.Presentacion.Pages.Materias.IndexModel
@{
    Layout = "_PartialLayoutusuarios";
    ViewData["Title"] = "Materias en curso";
}

@if (Model.Materias.Any())
{
    <h3 style="margin-bottom: 15px;">@ViewData["Title"]</h3>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Materias.ElementAt(0).Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Materias.ElementAt(0).GradoAcademico)
                </th>
                <th>
                    Profesor asignado
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Materias)
            {
                <tr class="row-cols-auto">
                    <td class="col-md-4">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="col-md-4">
                        @Html.DisplayFor(modelItem => item.GradoAcademico.Nombre)
                    </td>
                    <td class="col-md-4">
                        @if (item.GradoAcademico.Profesores.Count > 0)
                        {
                            @($"{item.GradoAcademico.Profesores.ElementAt(0).Nombres} {item.GradoAcademico.Profesores.ElementAt(0).Apellidos}")
                        }
                        else
                        {
                            @("No hay profesor asignado")
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 style="margin-bottom: 15px;">No hay materias inscritas</h3>
    <a asp-page="../Inscripcion/Index">Inscribir materias</a>
}